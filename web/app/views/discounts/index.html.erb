<h1>Listing discounts</h1>
<hr>

<div class="panel panel-default">
  <div class="panel-heading panel-heading-toolbox">
    <div class="panel-toolbar">
      <%= link_to new_discount_path, class: "btn btn-primary", data: { tooltip: 'tooltip' }, title: "New Discount" do %>
        <span class="glyphicon glyphicon-plus"></span>
      <% end %>
    </div>    
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
                      <th>Name</th>
                      <th>Quantity</th>
                      <th>Product</th>
                      <th>User</th>
                  </tr>
      </thead>

      <tbody>
        <% @discounts.each do |discount| %>
          <tr>
                              <td><%= link_to discount.name, discount_path(discount) %></td>
                              <td><%= discount.quantity %></td>
                            <td><%= discount.product.name %></td>
                            <td><%= discount.user.name %></td>
                      </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer panel-footer-toolbox">
    <div class="panel-toolbar">
      <%= will_paginate @discounts, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>

<br>
