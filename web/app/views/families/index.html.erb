<h1>Listing families</h1>
<hr>

<div class="panel panel-default">
  <div class="panel-heading panel-heading-toolbox">
    <div class="panel-toolbar">
      <%= link_to new_family_path, class: "btn btn-primary", data: { tooltip: 'tooltip' }, title: "New Family" do %>
        <span class="glyphicon glyphicon-plus"></span>
      <% end %>
    </div>    
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
                      <th>Name</th>
                      <th>Description</th>
                  </tr>
      </thead>

      <tbody>
        <% @families.each do |family| %>
          <tr>
                              <td><%= link_to family.name, family_path(family) %></td>
                              <td><%= family.description %></td>
                      </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer panel-footer-toolbox">
    <div class="panel-toolbar">
      <%= will_paginate @families, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>

<br>
