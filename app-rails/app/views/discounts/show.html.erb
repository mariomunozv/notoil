<h1>Detail discount</h1>
<hr>

<div class="panel panel-default">
	<div class="panel-heading panel-heading-toolbox">
		<div class="panel-toolbar">
			<%= link_to 'Volver', discounts_path, :class => "btn btn-link" %>
			<%= link_to edit_discount_path(@discount), data: { tooltip: 'tooltip' }, class: "btn btn-default", title: "Edit" do %>
	          	<span class="glyphicon glyphicon-pencil"></span>
	        <% end %>
			<%= link_to @discount, method: :delete, data: { confirm: 'Are you sure?' }, data: { tooltip: 'tooltip' }, class: "btn btn-default", title: "Delete" do %>
	          	<span class="glyphicon glyphicon-trash"></span>
	        <% end %>
		</div>    
	</div>
	<div class="panel-body">
		
		<table class="table table-bordered">
			<tbody>
							<tr>
				  <th>Name:</th>
				  <td><%= @discount.name %></td>
				</tr>
							<tr>
				  <th>Quantity:</th>
				  <td><%= @discount.quantity %></td>
				</tr>
							<tr>
					<th>Product:</th>
					<td><%= @discount.product.name %></td>
				</tr>
							<tr>
					<th>User:</th>
					<td><%= @discount.user.name %></td>
				</tr>
						</tbody>
		</table>

	</div>
</div>
