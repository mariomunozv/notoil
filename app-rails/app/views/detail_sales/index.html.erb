<h1>Listing detail_sales</h1>
<hr>

<div class="panel panel-default">
  <div class="panel-heading panel-heading-toolbox">
    <div class="panel-toolbar">
      <%= link_to new_detail_sale_path, class: "btn btn-primary", data: { tooltip: 'tooltip' }, title: "New Detail sale" do %>
        <span class="glyphicon glyphicon-plus"></span>
      <% end %>
    </div>    
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
                      <th>Name</th>
                      <th>Quantity</th>
                      <th>Valor</th>
                      <th>Sale</th>
                      <th>Product</th>
                  </tr>
      </thead>

      <tbody>
        <% @detail_sales.each do |detail_sale| %>
          <tr>
                              <td><%= link_to detail_sale.name, detail_sale_path(detail_sale) %></td>
                              <td><%= detail_sale.quantity %></td>
                              <td><%= detail_sale.valor %></td>
                            <td><%= detail_sale.sale.name %></td>
                            <td><%= detail_sale.product.name %></td>
                      </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer panel-footer-toolbox">
    <div class="panel-toolbar">
      <%= will_paginate @detail_sales, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>

<br>
