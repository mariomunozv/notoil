<%= form_for(@product) do |f| %>
<% if @product.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

    <ul>
        <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="form-group">
                <%= f.label :barcode %>
            <%= f.number_field :barcode, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :brand %>
            <%= f.text_field :brand, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :name %>
            <%= f.text_field :name, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :description %>
            <%= f.text_field :description, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :price %>
            <%= f.number_field :price, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :price_net %>
            <%= f.number_field :price_net, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :family_id %>
            <%= f.collection_select :family_id, Family.all, :id, :name, prompt: true, :class => 'form-control'  %>
    </div>
<div class="actions">
    <%= f.submit :class => "btn btn-success" %>
</div>
<% end %>
