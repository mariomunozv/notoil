<h1>Listing products</h1>
<hr>

<div class="panel panel-default">
  <div class="panel-heading panel-heading-toolbox">
    <div class="panel-toolbar">
      <%= link_to new_product_path, class: "btn btn-primary", data: { tooltip: 'tooltip' }, title: "New Product" do %>
        <span class="glyphicon glyphicon-plus"></span>
      <% end %>
    </div>    
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
                      <th>Barcode</th>
                      <th>Brand</th>
                      <th>Name</th>
                      <th>Description</th>
                      <th>Price</th>
                      <th>Price net</th>
                      <th>Family</th>
                  </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
                              <td><%= product.barcode %></td>
                              <td><%= product.brand %></td>
                              <td><%= link_to product.name, product_path(product) %></td>
                              <td><%= product.description %></td>
                              <td><%= product.price %></td>
                              <td><%= product.price_net %></td>
                            <td><%= product.family.name %></td>
                      </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer panel-footer-toolbox">
    <div class="panel-toolbar">
      <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>

<br>
